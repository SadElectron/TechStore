@model ImageCpuModel;

<h2 class="text-center mb-4">@Model.ToString() Image List</h2>
<div class="container">
    <div class="row justify-content-center">
        <table class="table table-hover">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Type</th>
                    <th scope="col">Image</th>
                    <th scope="col"><a href="../Create" class="btn btn-sm btn-primary" role="button">Add Image</a></th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @{
                    int i = 0;
                }
                @foreach (var item in Model.Images)
                {
                    <tr>
                        <th scope="row">@(++i)</th>
                        <td>
                            <select class="form-select" aria-label="Default select example">
                                @if (item.Type == false)
                                {
                                    <option value="0" selected>Mini</option>
                                    <option value="1">Large</option>
                                }else
                                {
                                    <option value="0">Mini</option>
                                    <option value="1" selected>Large</option>
                                }

                            </select>
                        </td>
                        <td><img src="data:image/png;base64, @item.File"></td>
                        <td>
                            <a href="Image/Delete/@item.ImageId" class="btn btn-sm btn-danger" role="button">Delete</a>
                        </td>
                    </tr>

                }
            </tbody>
        </table>

    </div>

</div>