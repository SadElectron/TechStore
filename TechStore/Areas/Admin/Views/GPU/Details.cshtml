@model GpuModel

@{
    ViewData["Title"] = "Details";
}

<h1 class="text-center">Details</h1>

<div class="container">
    <h4>GPU</h4>
    <div class="row">
        <div class="row mb-2">
            <div class="table-responsive">
                <table class="table table-hover">
                    <tbody>
                        <tr>
                            <th class="col-sm-3">Brand</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.Brand)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Model Name</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.ModelName)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Graphic Engine</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.GraphicEngine)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">VRAM Size</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.VramSize)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">VRAM Type</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.VramType)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Base Clock Speed</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.BaseClockSpeed)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Boost Clock Speed</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.BoostClockSpeed)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Memory Bus Width</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.MemoryBusWidth)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">TDP</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.Tdp)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Power Connectors</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.PowerConnectors)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Interface</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.Interface)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Display Ports</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.DisplayPorts)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Launch Date</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.LaunchDate)</td>
                        </tr>
                        <tr>
                            <th class="col-sm-3">Price</th>
                            <td class="col-sm-9">@Html.DisplayFor(model => model.Gpu.Price)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="row mb-3">
            <!--Images-->
            <div class="mb-3 row">
                <div class="accordion" id="accordionPanelsStayOpenExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
                                Images
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <table class="table table-hover">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Id</th>
                                            <th scope="col">Image</th>

                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Images != null)
                                            {
                                                int i = 0;
                                                foreach (var image in Model.Images)
                                                {

                                                    <tr>
                                                        <th scope="row">@(++i)</th>
                                                        <td>@image.Id</td>
                                                        <td><img src="data:image /jpeg;base64,@Convert.ToBase64String(image.File)" style="max-width:100px; height:auto" alt="Image" /></td>

                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Gpu.Id" class="btn btn-primary">Edit</a> |
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
