@model GpuModel
<h2 class="text-center mb-4">Update Gpu</h2>
<div class="container">
    <div class="row justify-content-center">
        <form asp-action="Update">
            <div class="mb-3 row">
                <input type="hidden" class="form-control" id="Gpu_Id" name="Gpu.Id" value="@Model.Gpu.Id">
            </div>
            <div class="mb-3 row">
                <label for="Brand" class="col-3 form-label">Brand</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.Brand" class="form-control" value="@Model.Gpu.Brand">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="ModelName" class="col-3 form-label">Model Name</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.ModelName" class="form-control" value="@Model.Gpu.ModelName">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="GraphicEngine" class="col-3 form-label">Graphic Engine</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.GraphicEngine" class="form-control" value="@Model.Gpu.GraphicEngine">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="VramSize" class="col-3 form-label">Vram Size</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.VramSize" class="form-control" value="@Model.Gpu.VramSize">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="VramType" class="col-3 form-label">Vram Type</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.VramType" class="form-control" value="@Model.Gpu.VramType">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="BaseClockSpeed" class="col-3 form-label">Base Clock Speed</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.BaseClockSpeed" class="form-control" value="@Model.Gpu.BaseClockSpeed">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="BoostClockSpeed" class="col-3 form-label">Boost Clock Speed</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.BoostClockSpeed" class="form-control" value="@Model.Gpu.BoostClockSpeed">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="MemoryBusWidth" class="col-3 form-label">MemoryBusWidth</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.MemoryBusWidth" class="form-control" value="@Model.Gpu.MemoryBusWidth">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Tdp" class="col-3 form-label">Tdp</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.Tdp" class="form-control" value="@Model.Gpu.Tdp">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="PowerConnectors" class="col-3 form-label">Power Connectors</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.PowerConnectors" class="form-control" value="@Model.Gpu.PowerConnectors">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Interface" class="col-3 form-label">Interface</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.Interface" class="form-control" value="@Model.Gpu.Interface">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="DisplayPorts" class="col-3 form-label">Display Ports</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.DisplayPorts" class="form-control" value="@Model.Gpu.DisplayPorts">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="LaunchDate" class="col-3 col-3 form-label">Launch Date</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.LaunchDate" class="form-control" value="@Model.Gpu.LaunchDate">
                </div>
            </div>
            <div class="mb-3 row">
                <label for="Price" class="col-3 col-3 form-label">Price</label>
                <div class="col-9">
                    <input asp-for="@Model.Gpu.Price" class="form-control" value="@Model.Gpu.Price">
                </div>
            </div>
            <div class="mb-3 row">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
            <!--Images-->
            <div class="mb-3 row">
                <div class="accordion" id="accordionPanelsStayOpenExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
                                Images
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <table id="ImageTable" class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Id</th>
                                            <th scope="col">Image</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Images != null)
                                            {
                                                int i = 0;
                                                foreach (var image in Model.Images)
                                                {

                                                    <tr>
                                                        <th scope="row">@(i++)</th>
                                                        <td>@image.Id</td>
                                                        <td><img src="data:image /jpeg;base64,@Convert.ToBase64String(image.File)" style="max-width:100px; height:auto" alt="Image" /></td>
                                                    <td><button class="btn btn-danger" id="DeleteImageButton" onclick="DeleteImage(event,'@image.Id')">Delete</button></td>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                                <div class="row mb-3">
                                <button class="btn btn-primary" id="AddImage">Add Image</button>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>      

    </div>

</div>