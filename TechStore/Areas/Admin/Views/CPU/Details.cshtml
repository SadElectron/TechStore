@model CpuModel

@{
    ViewData["Title"] = "Details";
}


<div class="container">
    <h4>CPU</h4><h1> Details</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="row mb-3">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Row Number</th>
                        <th>Property Name</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Row 1: ID -->
                    <tr>
                        <td>1</td>
                        <td>ID</td>
                        <td>@Model.Cpu.Id</td>
                    </tr>
                    <!-- Row 2: Brand -->
                    <tr>
                        <td>2</td>
                        <td>Brand</td>
                        <td>@Model.Cpu.Brand</td>
                    </tr>
                    <!-- Row 3: Model Name -->
                    <tr>
                        <td>3</td>
                        <td>Model Name</td>
                        <td>@Model.Cpu.ModelName</td>
                    </tr>
                    <!-- Row 4: Core Count -->
                    <tr>
                        <td>4</td>
                        <td>Core Count</td>
                        <td>@Model.Cpu.CoreCount</td>
                    </tr>
                    <!-- Row 5: Thread Count -->
                    <tr>
                        <td>5</td>
                        <td>Thread Count</td>
                        <td>@Model.Cpu.ThreadCount</td>
                    </tr>
                    <!-- Row 6: Base Clock Speed -->
                    <tr>
                        <td>6</td>
                        <td>Base Clock Speed</td>
                        <td>@Model.Cpu.BaseClockSpeed</td>
                    </tr>
                    <!-- Row 7: Max Turbo Frequency -->
                    <tr>
                        <td>7</td>
                        <td>Max Turbo Frequency</td>
                        <td>@Model.Cpu.MaxTurboFrequency</td>
                    </tr>
                    <!-- Row 8: Cache Size -->
                    <tr>
                        <td>8</td>
                        <td>Cache Size</td>
                        <td>@Model.Cpu.CacheSize</td>
                    </tr>
                    <!-- Row 9: Socket Type -->
                    <tr>
                        <td>9</td>
                        <td>Socket Type</td>
                        <td>@Model.Cpu.SocketType</td>
                    </tr>
                    <!-- Row 10: Integrated Graphics -->
                    <tr>
                        <td>10</td>
                        <td>Integrated Graphics</td>
                        <td>@Model.Cpu.IntegratedGraphics</td>
                    </tr>
                    <!-- Row 11: Memory Support -->
                    <tr>
                        <td>11</td>
                        <td>Memory Support</td>
                        <td>@Model.Cpu.MemorySupport</td>
                    </tr>
                    <!-- Row 12: TDP -->
                    <tr>
                        <td>12</td>
                        <td>TDP</td>
                        <td>@Model.Cpu.Tdp</td>
                    </tr>
                    <!-- Row 13: Launch Date -->
                    <tr>
                        <td>13</td>
                        <td>Launch Date</td>
                        <td>@Model.Cpu.LaunchDate</td>
                    </tr>
                    <!-- Row 14: Price -->
                    <tr>
                        <td>14</td>
                        <td>Price</td>
                        <td>@Model.Cpu.Price</td>
                    </tr>
                </tbody>
            </table>

        </div>
        <div class="row mb-3">
            <!--Images-->
            <div class="mb-3 row">
                <div class="accordion" id="accordionPanelsStayOpenExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseOne" aria-expanded="false" aria-controls="panelsStayOpen-collapseOne">
                                Images
                            </button>
                        </h2>
                        <div id="panelsStayOpen-collapseOne" class="accordion-collapse collapse">
                            <div class="accordion-body">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th scope="col">#</th>
                                            <th scope="col">Id</th>
                                            <th scope="col">Image</th>
                                            <th scope="col">File</th>
                                            <th scope="col"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            if (Model.Images != null)
                                            {
                                                int i = 0;
                                                foreach (var image in Model.Images)
                                                {

                                                    <tr>
                                                        <th scope="row">@i++;</th>
                                                        <td>@image.Id</td>
                                                        <td><img src="data:image /jpeg;base64,@Convert.ToBase64String(image.File)" style="max-width:100px; height:auto" alt="Image" /></td>
                                                        <td><input type="file" class="form-control" name="Images" /></td>
                                                        <td><a class="btn btn-danger" href="">Delete</a></td>
                                                    </tr>
                                                }
                                            }
                                        }

                                    </tbody>
                                </table>
                                <a class="btn btn-primary" href="">Add Image</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        

        
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Cpu.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</div>

